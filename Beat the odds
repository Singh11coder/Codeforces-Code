#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    for(int i=0;i<t;i++)
    {
        int n;
        cin>>n;
        int count=0;
        vector<int>v(n);
        for(int i=0;i<v.size();i++)
        {
            cin>>v[i];
        }
        int even=0;
        int odd=0;
        for(int i=0;i<v.size();i++)
        {
            if(v[i]%2==0)
            {
                even++;
            }
            else
            {
                odd++;
            }
        }
        
       int k=min(even,odd);
       cout<<k<<endl;
    }
}
