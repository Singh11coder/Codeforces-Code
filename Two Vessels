#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    for(int i=0;i<t;i++)
    {
        int a,b,c;
        cin>>a;
        cin>>b;
        cin>>c;
        int t=abs(b-a);
        int d;
        if(t%2==0)
        {
            d=t/2;
        }
        else
        {
            d=t/2 +1;
        }
       int f;
        f=d/c;
        if(d%c!=0)
        {

            f=f+1;
        }
        cout<<f<<endl;


    }
}
